<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@flight) do |f| %>

			<%= render 'shared/error_messages', object: f.object %>
      
      <div class="inline-label"><%= f.label :airline_iata, "Airline code" %></div> /
      <div class="inline-label"><%= f.label :flight_number %></div>
      <div class="form-group form-inline">
        <div class="input-group">
          <%= f.text_field :airline_iata, class: 'form-control', maxlength: 2, style: 'text-transform:uppercase;width:4em', placeholder: 'AA' %>
        </div>
        <div class="input-group">
          <%= f.text_field :flight_number, class: 'form-control', maxlength: 4, style: 'text-transform:uppercase;width:5em', placeholder: '1234' %>
        </div>
      </div>
      
      <div class="inline-label"><%= f.label :origin_airport_iata, "Origin" %></div> /
      <div class="inline-label"><%= f.label :destination_airport_iata, "destination" %></div> airport codes
      <div class="form-group form-inline">
        <div class="input-group">
          <%= f.text_field :origin_airport_iata, class: 'form-control', maxlength: 3, style: 'text-transform:uppercase;width:5em', value: params.dig(:flight, :origin_airport_iata), placeholder: 'AAA' %>
        </div>
        <div class="input-group">
          &ndash;
        </div>
        <div class="input-group">
          <%= f.text_field :destination_airport_iata, class: 'form-control', maxlength: 3, style: 'text-transform:uppercase;width:5em', value: params.dig(:flight, :destination_airport_iata), placeholder: 'AAA' %>
        </div>
      </div>
      
			<%= f.label :is_event_arrival, "Arrival or departure?" %>
			<%= f.select :is_event_arrival, options_for_select([["Arrival – this flight brings the traveler to the event", true],["Departure – this flight takes the traveler home from the event", false]], selected: (params[:direction] != "departure")) %>
          
      <%= f.label :origin_time, "Origin local departure date and time" %>
      <%= f.datetime_field :origin_time, type: 'datetime', value: f.object.origin_time.try(:strftime, "%Y-%m-%d %H:%M"), class: 'form-control date-field', placeholder: "yyyy-mm-dd hh:mm" %>
          
      <%= f.label :destination_time, "Destination local arrival date and time" %>
      <%= f.datetime_field :destination_time, type: 'datetime', value: f.object.destination_time.try(:strftime, "%Y-%m-%d %H:%M"), class: 'form-control date-field', placeholder: "yyyy-mm-dd hh:mm" %>
      
      <%= f.submit yield(:form_button), class: "btn btn-primary" %>
      
    <% end %>
    
  </div>
</div>
