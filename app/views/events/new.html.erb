<% provide(:title, 'Create New Event')%>
<h1>Create New Event</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= render 'form_fields', :f => f %>
			
			<%= f.submit "Create my event", class: "btn btn-primary" %>
			
		<% end %>
	</div>
</div>