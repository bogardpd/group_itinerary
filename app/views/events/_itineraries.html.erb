<% if itineraries.any? %>
<table class="table table-striped">
	<thead>
		<th class="event-traveler">Traveler</th>
		<th class="event-flights">Flights</th>
		<th class="event-pickup-info">Pickup Info</th>
	</thead>
	<% itineraries.each do |section| %>
		<tr>
			
			<td>
				<span class="traveler-name"><%= section[:name] %></span>
        <% if current_user?(@event.user) %>
          <div class="edit-button">
            <%= link_to("<span class=\"glyphicon glyphicon-pencil\"></span> <span class=\"glyphicon glyphicon-user\"></span>".html_safe, edit_section_path(section[:id]), title: "Edit #{section[:name]}", class: "btn btn-default") %>
          </div>
        <% end %>
        <br />
				<span class="traveler-note"><%= section[:note] %></span>
			</td>
			
			<td>
        <% section[:flights].each_with_index do |flight, index| %>
          <div class="flight">
            <% if current_user?(@event.user) %>
              <div class="btn-group-vertical edit-button">
                <%= link_to("<span class=\"glyphicon glyphicon-pencil\"></span> <span class=\"glyphicon glyphicon-plane\"></span>".html_safe, edit_flight_path(flight[:id]), title: "Edit #{flight[:airline]} #{flight[:flight_number]}", class: "btn btn-default") %>
                <% if index == section[:flights].size - 1 %>
                  <%= link_to("<span class=\"glyphicon glyphicon-plus\"></span> <span class=\"glyphicon glyphicon-plane\"></span>".html_safe, new_flight_path(section: section[:id]), title: "Add a new flight to #{section[:name]}’s itinerary", class: "btn btn-default") %>
                <% end %>
              </div>
            <% end %>
              
            <span class="flight-time"><%= flight_times(flight[:departure_time], flight[:arrival_time]) %></span>
            <span class="flight-timezone"><%= section[:timezone] %></span>
            <br/>
            <span class="flight-airports"><%= flight[:departure_airport] %> &ndash; <%= flight[:arrival_airport] %></span><br/>
            <span class="flight-number"><%= flight[:airline] %> <%= flight[:flight_number] %></span>
          </div>
        <% end %>
				<% if current_user?(@event.user) && section[:flights].empty? %>
          <%= link_to("<span class=\"glyphicon glyphicon-plus\"></span> <span class=\"glyphicon glyphicon-plane\"></span>&ensp;Add a flight".html_safe, new_flight_path(section: section[:id]), title: "Add a new flight to #{section[:name]}’s itinerary", class: "btn btn-default") %>
          
        <% end %>
			</td>
      
			<td>
				<%= section[:pickup_info] %>
			</td>
      
		</tr>
	<% end %>
</table>
<% end %>