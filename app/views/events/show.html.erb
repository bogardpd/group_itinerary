<% provide(:title, @event.event_name)%>
<% provide(:meta_description, "See when everyone arrives at and departs from #{@event.event_name}.")%>

<% if current_user?(@event.user) %>
  <div class="row center">

  <%= form_for(:event, url: share_link_path, html: { class: "form-inline" } ) do |f| %>
    
    <div class="input-group">
      <%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span> Edit #{@event.event_name} information".html_safe, edit_event_path(@event), class: "btn btn-primary" %> 
    </div>
    
    <div class="input-group">
      <div class="input-group-addon">
        Share:
      </div>
      <%= f.label :share_link, class: "sr-only" %>
      <%= f.text_field :share_link, class: "form-control", value: @share_link, style: "width: 450px" %>
    </div>
    <div class="input-group">
      <%= f.submit "Generate new share link", class: "btn btn-default", data: { confirm: "Are you sure you want to generate a new share link? Anyone with the current link will no longer be able to see this page." } %>
    </div>
    
  <% end %>
  </div>
<% end %>

<%= @airline_codes %>

<h1><%= @event.event_name %></h1>

<% if @event.note? %>
  <div class="alert alert-info"><%= markdown_text(@event.note) %></div>
<% end %>

<% draw_charts %>

<hr />

<h2>Incoming Flight Details</h2>

<% if current_user?(@event.user) %>
  <%= link_to "<span class=\"glyphicon glyphicon-plus\"></span> Add a traveler’s incoming itinerary".html_safe, new_section_path(event: @event, direction: :arrival), class: "btn btn-success" %>
<% end %>

<%= render 'itineraries', itineraries: @flights[0] %>

<h2>Returning Flight Details</h2>

<% if current_user?(@event.user) %>
  <%= link_to "<span class=\"glyphicon glyphicon-plus\"></span> Add a traveler’s returning itinerary".html_safe, new_section_path(event: @event, direction: :departure), class: "btn btn-success" %>
<% end %>

<%= render 'itineraries', itineraries: @flights[1] %>