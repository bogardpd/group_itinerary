<div class="col-lg-6">
  <div class="card">
    <h4 class="card-header"><%= traveler_direction_title(direction, @event.event_name) %></h4>
    <div class="card-body">
    
      <table class="table flight">
    
        <% traveler[direction][:flights].each_with_index do |flight, index| %>
    
        <tr>
          <td class="flight-identifier">
            <%= airline_icon(flight[:airline_iata], show_blank_icon: false) %>
            <div class="flight-airline"><%= flight[:airline_name] %></div>
            <div class="flight-number"><%= flight[:flight_number] %></div>
            <% if current_user?(@event.user) %>
              <div class="btn-group flight-edit">
                <%= link_to("Edit", edit_flight_path(flight[:id]), title: "Edit #{flight[:airline_name]} #{flight[:flight_number]}", class: "btn btn-sm btn-outline-primary") %>
              </div>
            <% end %>
          </td>
          <td class="flight-airport flight-origin"<%= highlight(@airport_colors[flight[:origin_iata]]) if direction == :departures && index == 0 %>>
            <div class="flight-city"><%= flight[:origin_name] %></div>
            <div class="flight-iata"><%= flight[:origin_iata] %></div>
            <div class="flight-date-time">
              <%= short_date(flight[:origin_time_local]) %><br/>
              <%= short_time(flight[:origin_time_local]) %> <span class="time-zone"><%= flight[:origin_time_local].strftime("%Z") %></span>
          
            </div>
          </td>
          <td class="flight-separator">
            <%= octicon("arrow-right") %>
          </td>
          <td class="flight-airport flight-destination"<%= highlight(@airport_colors[flight[:destination_iata]]) if direction == :arrivals && index == traveler[direction][:flights].length-1 %>>
            <div class="flight-city"><%= flight[:destination_name] %></div>
            <div class="flight-iata"><%= flight[:destination_iata] %></div>
            <div class="flight-date-time">
              <%= short_date(flight[:destination_time_local]) %><br/>
              <%= short_time(flight[:destination_time_local]) %> <span class="time-zone"><%= flight[:destination_time_local].strftime("%Z") %></span>
            </div>
          </td>
        </tr>
    
        <% end %>
    
        <% if current_user?(@event.user) %> 
        <tr>
          <td colspan="4" class="flight-new-button">
            <%= link_to("Add #{direction == :arrivals ? "an arrival" : "a departure"} flight for #{traveler[:traveler_name]}".html_safe, new_flight_path(traveler: traveler_id, direction: direction == :arrivals ? :arrival : :departure), title: "Add a new flight to #{traveler[:traveler_name]}â€™s itinerary", class: "btn btn-sm btn-outline-primary") %>
          </td>
        </tr>
        <% end %>
        
        
    
      </table>
      
      
    
    </div>
    <% if traveler[direction][:info] %>
      <div class="card-footer"><%= traveler[direction][:info] %></div>
    <% end %>
  </div>
</div>