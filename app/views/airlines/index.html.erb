<% provide(:title, 'Airlines')%>
<h1>Airlines</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  
<table class="table">
  <thead>
    <th>IATA Code</th>
    <th>Name</th>
    <th>Edit</th>
  </thead>
<% @airlines.each do |airline| %>
  <tr>
    <td><%= airline.iata_code %></td>
    <td><%= airline_icon(airline.iata_code, show_blank_icon: true) %> <%= airline.name %></td>
    <td>
      <% if airline.name.nil? %>
        <%= link_to %Q(<span class="label label-warning">Needs Review</span>).html_safe, edit_airline_path(airline) %>
      <% else %>
        <%= link_to "Edit", edit_airline_path(airline) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

</div>
</div>