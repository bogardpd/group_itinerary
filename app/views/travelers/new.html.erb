<% provide(:title, @title_text)%>
<h1><%= @title_text %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@traveler) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.hidden_field :event, value: params[:event] %>
			
			<%= render 'form_fields', :f => f %>
			
			<% if @show_arrival_departure %>
				<%= f.label :is_arrival, 'Arrival or Departure?' %>
				<%= f.select :is_arrival, options_for_select([['Arrival', true],['Departure', false]]) %>
	
			<% else %>
				<%= f.hidden_field :is_arrival, value: @is_arrival %>

			<% end %>
			
			<p>You will be able to add flights after you create this itinerary.</p>
			
			<%= f.submit "Create itinerary", class: "btn btn-primary" %>
			
		<% end %> 
	</div>
</div>