<% provide(:title, "Add a New Traveler")%>
<h1><%= "Add a New Traveler" %></h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@traveler) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.hidden_field :event, value: params[:event] %>
			
			<%= render 'form_fields', :f => f %>
			
			<p>You will be able to add flights after you create this traveler.</p>
			
			<%= f.submit "Create traveler", class: "btn btn-primary" %>
			
		<% end %> 
	</div>
</div>