<% provide(:title, "Edit Traveler")%>
<h1><%= "Edit Traveler" %></h1>

<div class="row justify-content-center">
	<div class="col-md-6">
		<%= form_for(@traveler) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<%= f.hidden_field :event, value: params[:event] %>
			
			<%= render 'form_fields', :f => f %>

			<%= f.label :arrival_info %> <small>(e.g. "Rental Car" or "Riding with John Doe")</small>
			<%= f.text_field :arrival_info, class: 'form-control' %>
      
			<%= f.label :departure_info %> <small>(e.g. "Rental Car" or "Riding with John Doe")</small>
			<%= f.text_field :departure_info, class: 'form-control' %>
			
			<%= f.submit "Update traveler info", class: "btn btn-primary" %>
			
		<% end %>
	</div>
</div>

<hr />
<div class="delete-button">
	<%= link_to "Delete this traveler", @traveler, method: :delete, data: { confirm: "Are you sure you want to delete this traveler?"}, class: "btn btn-danger" %>
</div>