<% provide(:title, 'Airports')%>
<h1>Airports</h1>

<div class="button center"><%= link_to("<span class=\"glyphicon glyphicon-plus\"></span> Manually create new airport".html_safe, new_airport_path, title: "Manually create a new airport", class: "btn btn-default") %></div>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  
<table class="table">
  <thead>
    <th>IATA Code</th>
    <th>City</th>
    <th>Edit</th>
  </thead>
<% @airports.each do |airport| %>
  <tr>
    <td><%= airport.iata_code %></td>
    <td><%= airport.name %></td>
    <td>
      <% if airport.needs_review %>
        <%= link_to %Q(<span class="label label-warning">Needs Review</span>).html_safe, edit_airport_path(airport) %>
      <% else %>
        <%= link_to "Edit", edit_airport_path(airport) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

</div>
</div>