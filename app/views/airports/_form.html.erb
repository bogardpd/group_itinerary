<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@airport) do |f| %>
    
			<%= render 'shared/error_messages', object: f.object %>
      
      <% if show_iata %>
        <%= f.label :iata_code, "IATA code" %><br />
        <%= f.text_field :iata_code, maxlength: 3, class: "form-control code airport-iata" %>
      <% end %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :timezone %>
      <%= f.select :timezone, Timezones::select_options, {}, {class: "form-control"} %>

      <%= f.submit yield(:form_button), class: "btn btn-primary" %>

		<% end %>

	</div>
</div>